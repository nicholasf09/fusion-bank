<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".TransferActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekening Tujuan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/etRekening"
        android:inputType="number"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input"
        android:hint="ex: 0880124312"
        android:padding="12dp"
        android:minHeight="48dp" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominal Transfer"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/etNominal"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: 1000000"
        android:padding="12dp"
        android:background="@drawable/background_input"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berita"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/etBerita"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input"
        android:padding="12dp"
        android:hint="ex: lorem ipsum"
        android:minHeight="48dp" />

    <Button
        android:layout_marginHorizontal="12dp"
        android:id="@+id/btnTransfer"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:textColor="@color/white"
        android:background="@drawable/button_main"
        android:textSize="18sp"
        android:paddingVertical="8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:layout_margin="8dp"
            android:id="@+id/btnScanner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#e9f1fb"
            android:text="Bayar dengan QR"
            android:textColor="#000"
            android:textStyle="bold"/>

        <Button
            android:layout_margin="8dp"
            android:id="@+id/btnGenerate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#e9f1fb"
            android:textColor="#000"
            android:text="Generate QR"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>